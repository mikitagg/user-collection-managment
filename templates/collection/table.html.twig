{% extends 'base.html.twig' %}

{% block title %}users{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <div class="Container">
        <div class="nav m-3 justify-content-end">
            <div class="nav-item col-auto">
                  <span>
                      {{ app.user.userIdentifier }}
                  </span>
            </div>
        </div>
        <div class="card-header nav-item justify-content-end">
            <h5 class="card-title text-center">Collections</h5>
        </div>

        <div>
            <div class="row m-5">
                <div class="col">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>name</th>
                            <th>description</th>
                            <th>attributes</th>
                            <th>items</th>
                            <th>edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for col in collection %}
                            <tr>
                                <td>{{ col.id }}</td>
                                <td>{{ col.name }}</td>
                                <td>{{ col.description }}</td>
                                <td>
                                    {% for attr in col.attributes %}
                                        {{ attr }}
                                    {% endfor %}
                                </td>
                                <td> <a href="/item/collection/{{ col.id }}"> item </a>
                                </td>
                                <td>
                                    <a href="/collection/{{ col.id }}/update">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
